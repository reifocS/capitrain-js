{
  "config": {
    "spec": {
      "containers": [
        {
          "name": "nginx",
          "ports": [{ "containerPort": "80" }],
          "volumeMounts": [
            { "name": "data", "mountPath": "/var/www/html" },
            { "name": "config", "mountPath": "/etc/nginx/nginx.conf" },
            { "name": "cdn", "mountPath": "/var/www/html/assets" }
          ]
        }
      ],
      "volumes": [
        {
          "name": "data",
          "persistentVolumeClaim": { "claimName": "nginx-data" }
        },
        {
          "name": "config",
          "persistentVolumeClaim": { "claimName": "nginx-config" }
        },
        { "name": "cdn", "gcePersistentDisk": { "pdName": "app-cdn" } }
      ]
    }
  }
}
